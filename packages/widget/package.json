{
  "name": "@contextcompany/widget",
  "version": "1.0.0",
  "description": "The Context Company Widget",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "browser": "./dist/auto.global.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "global.d.ts"
  ],
  "scripts": {
    "build:css": "postcss src/styles.tailwind.css -o src/styles.css",
    "build": "npm run build:css && tsup",
    "dev": "npm run build:css && tsup --watch",
    "dev:all": "concurrently \"postcss src/styles.tailwind.css -o src/styles.css --watch\" \"tsup --watch\" \"npm run serve\"",
    "serve": "npx serve dist -p 3001 --cors"
  },
  "keywords": [
    "widget",
    "draggable",
    "preact"
  ],
  "license": "MIT",
  "dependencies": {
    "@preact/signals": "^1.3.0",
    "preact": "^10.26.9"
  },
  "devDependencies": {
    "lucide-preact": "^0.548.0",
    "markdown-to-jsx": "^8.0.0",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-json-view-lite": "^2.5.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
