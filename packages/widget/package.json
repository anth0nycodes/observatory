{
  "name": "@contextcompany/widget",
  "version": "1.0.4",
  "description": "The Context Company local-first AI SDK widget for Next.js",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "browser": "./dist/auto.global.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./auto": {
      "types": "./dist/auto.d.ts",
      "default": "./dist/auto.global.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:css": "postcss src/styles.tailwind.css -o src/styles.css",
    "build": "npm run build:css && tsup",
    "dev": "npm run build:css && tsup --watch",
    "dev:all": "concurrently \"postcss src/styles.tailwind.css -o src/styles.css --watch\" \"tsup --watch\" \"npm run serve\"",
    "serve": "npx serve dist -p 3001 --cors"
  },
  "keywords": [
    "observability",
    "nextjs",
    "ai-sdk",
    "context-company"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/The-Context-Company/observatory",
    "directory": "packages/widget"
  },
  "license": "MIT",
  "dependencies": {
    "@preact/signals": "^1.3.0",
    "preact": "^10.26.9",
    "lucide-preact": "^0.548.0",
    "markdown-to-jsx": "^8.0.0",
    "react-json-view-lite": "^2.5.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
